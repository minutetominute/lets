%div.page-show-request
  %div.title
    %span Title:
    = @service_request.title
  %div.description
    %span Description:
    = @service_request.description
  %div.new-offer
    = link_to 'New Offer', '/offer/new', class: 'button'
  %div.offer-listing
    %span Offers:
    - @service_request.offers.each do |offer|
      %li
        %div
          %span Karam Points:
          = offer.karma_points
        %div
          %span Description:
          = offer.description
