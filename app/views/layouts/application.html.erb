<!DOCTYPE html>
<html>
  <head>
    <title>Lets</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class='nav-container'>
      <a class='logo-link' href='/'>
        <div class='logo'></div>
      </a>

      <%- if @current_user %>
      <div class='user-info'>
        <li>Karma Points</li>
        <li><a class="tab-link" href = "/users/1"><%= @current_user.name %></li>
        <li><%= link_to "Log out", logout_path, method: :delete %></li>
      </div>

      <%- end %>
    </div>
    <%- if @current_user %>
      <div class='sub-nav-container'>
        <div class='tab-listing'>
          <li><a class="tab-link <%= @current_uri == '/' ? 'active' : ''%>" href="/">All</a></li>
            <li><a class="tab-link <%= @current_uri == '/my_requests' ? 'active' : ''%>" href="/my_requests">My Requests</a></li>
            <li><a class="tab-link <%= @current_uri == '/my_offers' ? 'active' : ''%>" href="/my_offers">My Offers</a></li>
        </div>
        <div class='new-request'>
          <%= link_to 'New Request', '/service_requests/new', class: 'button' %>
        </div>
      </div>
    <%- end %>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
